<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <include
        android:id="@+id/main_tool"
        layout="@layout/activity_logout"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_tiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />
    <TextView
        android:id="@+id/homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HomePage"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_tiga"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/homepage"
        app:layout_constraintStart_toStartOf="@id/homepage"
        >

    </TextView>
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/homepage"
        app:layout_constraintStart_toEndOf="@id/welcome_user"
        >
    </TextView>
    <ImageView
        android:id="@+id/animation"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:src="@drawable/animation"
        app:layout_constraintTop_toBottomOf="@id/welcome_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/how_are_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you today?"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/animation"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <ImageView
        android:id="@+id/img_1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@id/how_are_you"
        app:layout_constraintStart_toStartOf="@id/how_are_you"
        android:src="@drawable/img_2"
        />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_1"
        app:layout_constraintStart_toEndOf="@id/img_1"
        app:layout_constraintTop_toBottomOf="@id/how_are_you"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>